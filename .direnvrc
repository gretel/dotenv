# https://github.com/zimbatm/direnv

local rb_version=2.2.1
local py_version=2.7.8
local hb_token=""

use_ruby() {
  ruby_version=$1
  local ruby_dir=$HOME/.rubies/ruby-$ruby_version

  path_add MANPATH "$ruby_dir/share/man"

  export GEM_HOME=$HOME/.gem/ruby/$ruby_version
  export GEM_PATH=$HOME/.gem/ruby/$ruby_version

  export BUNDLE_BIN=$HOME/.gem/ruby/$ruby_version/bin

  PATH_add "$ruby_dir/bin"
  PATH_add "$GEM_HOME/bin"
  PATH_add "$BUNDLE_BIN"
}

use_python() {
  python_version=$1
  #local python_bin=$HOME/.pyenv/versions/$python_version/bin
  local python_bin=$HOME/.pyenv/shims

  unset PYTHONHOME

  export PYENV_ROOT=$HOME/.pyenv
  export PYENV_VERSION=$python_version

  PATH_add "$python_bin"
}

use ruby $rb_version
use python $py_version

local local_path=/usr/local

PATH_add "$local_path/sbin"
PATH_add "$local_path/bin"

export HOMEBREW_PATH=$local_path
export HOMEBREW_GITHUB_API_TOKEN=$hb_token

export NODE_HOME=$local_path
export NODE_PATH=$local_path/lib/node_modules

export X11_PATH=/opt/X11

export EDITOR='/usr/local/bin/subl'
