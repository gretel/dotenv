# https://github.com/zimbatm/direnv

local rb_version=2.2.2
local py_version=2.7.10

local hb_token=""

local local_path=/usr/local

use_ruby() {
  local ruby_dir=$HOME/.rubies/ruby-$rb_version

  export GEM_HOME=$HOME/.gem/ruby/$rb_version
  export GEM_PATH=$HOME/.gem/ruby/$rb_version

  export BUNDLE_BIN=$HOME/.gem/ruby/$rb_version/bin

  path_add MANPATH "$ruby_dir/share/man"
  PATH_add "$ruby_dir/bin"
  PATH_add "$GEM_HOME/bin"
  PATH_add "$BUNDLE_BIN"
}

use_python() {
  local python_bin=$HOME/.pyenv/shims

  unset PYTHONHOME

  export PYENV_ROOT=$HOME/.pyenv
  export PYENV_VERSION=$py_version

  PATH_add "$python_bin"
}

use_homebrew() {
  PATH_add "$local_path/sbin"
  PATH_add "$local_path/bin"

  export HOMEBREW_PATH=$local_path
  export HOMEBREW_GITHUB_API_TOKEN=$hb_token
}

use_node() {
  export NODE_HOME=$local_path
  export NODE_PATH=$local_path/lib/node_modules
}

export X11_PATH=/opt/X11
export EDITOR='/usr/local/bin/subl'

use homebrew
use node
use ruby
use python
