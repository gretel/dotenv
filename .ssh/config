Host *
  ControlPersist yes
  ControlMaster auto
  ControlPath ~/.ssh/ctrl-%r@%h:%p
  Protocol 2
  VisualHostKey yes
  VerifyHostKeyDNS yes
  ForwardX11 no
  PreferredAuthentications keyboard-interactive,password,publickey,hostbased,gssapi-with-mic

Host *.jitter.local
  User tom
  IdentityFile ~/.ssh/id_rsa
  # IdentityFile ~/.ssh/svaha
  IdentitiesOnly yes
  VisualHostKey no
  PasswordAuthentication no

Host 10.0.* 192.168.*
  UserKnownHostsFile /dev/null

Host svaha.jitter.eu
   VerifyHostKeyDNS no
   IdentityFile ~/.ssh/svaha

Host github.com
  IdentityFile /Users/tom/.ssh/github
  IdentitiesOnly yes
  ControlMaster auto
  ControlPath ~/.ssh/master-%r@%h:%p
  VisualHostKey yes
  VerifyHostKeyDNS yes
  StrictHostKeyChecking yes
  PasswordAuthentication no
  IdentitiesOnly yes
